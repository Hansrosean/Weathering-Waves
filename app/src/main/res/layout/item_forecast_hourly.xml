<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_forecast_hourly"
    android:layout_width="90dp"
    android:layout_height="210dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:layout_marginStart="25dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/dark_indigo"
    android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_forecast_hourly_temperature"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="00C"
            android:includeFontPadding="false"
            android:fontFamily="@font/plustjakartasans_bold"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_icon_forecast_hourly_weather"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_current_time_forecast_hourly"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:text="00:00"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

</androidx.cardview.widget.CardView>
