<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_forecast_daily"
    android:layout_width="80dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:layout_marginStart="25dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_forecast_daily_temperature"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/plustjakartasans_bold"
            android:gravity="center|top"
            android:includeFontPadding="false"
            android:text="00C"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_icon_forecast_daily_weather"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tv_day_name_forecast_daily"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="20dp"
            android:gravity="center|bottom"
            android:includeFontPadding="false"
            android:text="00.00"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>